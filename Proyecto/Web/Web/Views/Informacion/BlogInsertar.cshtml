@model Web.Entidades.BlogArticulo

<div class="container">
    <h1 class="text-center">@ViewBag.Title</h1>

    @using (Html.BeginForm()) // Formulario
    {
        @Html.HiddenFor(m => m.Id) <!-- Campo oculto para el Id al editar -->

        <div class="form-group">
            <label for="Titulo">Título</label>
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", placeholder = "Título del artículo" })
        </div>

        <div class="form-group">
            <label for="Categoria">Categoría</label>
            @Html.TextBoxFor(m => m.Categoria, new { @class = "form-control", placeholder = "Categoría del artículo" })
        </div>

        <div class="form-group">
            <label for="Resumen">Resumen</label>
            @Html.TextAreaFor(m => m.Resumen, new { @class = "form-control", rows = 3, placeholder = "Breve descripción del artículo" })
        </div>

        <div class="form-group">
            <label for="Contenido">Contenido</label>
            @Html.TextAreaFor(m => m.Contenido, new { @class = "form-control", rows = 10, placeholder = "Contenido completo del artículo" })
        </div>

        <div class="form-group">
            <label for="ImagenUrl">URL de la Imagen</label>
            @Html.TextBoxFor(m => m.ImagenUrl, new { @class = "form-control", placeholder = "URL de la imagen del artículo" })
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("VerBlogs", "Blog")" class="btn btn-secondary">Cancelar</a>
    }
</div>
