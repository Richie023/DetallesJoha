

@model Web.Entidades.Usuario
@{
    ViewBag.Title = "ActualizaUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-3 d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h2 class="m-0 font-weight-bold text-primary">Perfil</h2>
                                </div>


                                <div class="card-body">
                                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                                        @if (ViewBag.MsjPantalla != null)
                                        {
                                            <div class="alert alert-warning" role="alert" style="text-align:center">
                                                @ViewBag.MsjPantalla
                                            </div>
                                        }

                                        @using (Html.BeginForm("ActualizaUsuario", "Usuario", FormMethod.Post, new { @enctype = "multipart/form-data" }))

                                        {

                                            @Html.HiddenFor(m => m.Consecutivo)
                                        

                                            <div class="form-group">
                                                @Html.Label("Identificación")
                                                @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control form-control-user", @placeholder = "Identificacion", @readonly = "true", @required = "true" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Nombre")
                                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @readonly = "true", @required = "true" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Correo Electrónico")
                                                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control form-control-user", @placeholder = "CorreoElectronico", @type = "Email", @required = "true" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Contraseña")
                                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control form-control-user", @placeholder = "Contrasenna", @type = "Password", @readonly = "true" })
                                            </div>

                                            <div class="form-group">
                                                @Html.Label("Rol")
                                                @Html.DropDownListFor(m => m.ConsecutivoRol, ViewBag.Roles as List<SelectListItem>, new { @class = "form-control form-control-user", @required = "true" })
                                            </div>


                                            <input type="submit" class="primary-btn btn-user btn-block" value="Actulizar">
                                        }

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Estilos/js/RegistroUsuarios.js"></script>
<script>
                            window.onload = function () {
                                ConsultarNombre();
                            }
</script>

