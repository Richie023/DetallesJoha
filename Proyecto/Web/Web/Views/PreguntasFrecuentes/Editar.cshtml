@model Web.Entidades.PreguntasFrecuentes

@{
    ViewBag.Title = "Editar Pregunta Frecuente";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Editar Pregunta Frecuente</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            @using (Html.BeginForm("Actualizar", "PreguntasFrecuentes", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id) <!-- Campo oculto con el ID -->

                <div class="form-group">
                    @Html.LabelFor(model => model.Categoria, "Categoría")
                    @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", required = "required", placeholder = "Categoría" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Pregunta, "Pregunta")
                    @Html.TextBoxFor(model => model.Pregunta, new { @class = "form-control", required = "required", placeholder = "Escribe la pregunta aquí" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Respuesta, "Respuesta")
                    @Html.TextAreaFor(model => model.Respuesta, 5, 10, new { @class = "form-control", required = "required", placeholder = "Escribe la respuesta aquí" })
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a href="@Url.Action("Index", "PreguntasFrecuentes")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Bootstrap JavaScript -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>