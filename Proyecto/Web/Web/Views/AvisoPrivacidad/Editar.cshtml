
@model Web.Entidades.AvisoPrivacidad

@{
    ViewBag.Title = "Editar Aviso de Privacidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
    <h1 class="text-center font-weight-bold">@ViewBag.Title</h1>
    <p class="text-center text-muted">Edita los detalles de este aviso de privacidad.</p>

    <form asp-action="Actualizar" method="post" class="mt-4">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="TituloSeccion">Título</label>
            <input type="text" class="form-control" id="TituloSeccion" name="TituloSeccion" value="@Model.TituloSeccion" required />
        </div>

        <div class="form-group">
            <label for="SubtituloSeccion">Subtítulo</label>
            <input type="text" class="form-control" id="SubtituloSeccion" name="SubtituloSeccion" value="@Model.SubtituloSeccion" />
        </div>

        <div class="form-group">
            <label for="Contenido">Contenido</label>
            <textarea class="form-control" id="Contenido" name="Contenido" rows="5" required>@Model.Contenido</textarea>
        </div>

        <div class="form-group">
            <label for="Orden">Orden</label>
            <input type="number" class="form-control" id="Orden" name="Orden" value="@Model.Orden" required />
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a href="@Url.Action("AvisoPrivacidad", "AvisoPrivacidad")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

