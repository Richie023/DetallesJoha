<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Detalles JOHA</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">


    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Estilos/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/style.css" />
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/Footer.css" />
    <link type="text/css" rel="stylesheet" href="~/Estilos/css/Filtros.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +506-8303-9384</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> joha-Guillen@Hotmail.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> Costado norte de la plaza de cipreses de Oreamuno</a></li>
                </ul>
                <ul class="header-links pull-right">
                    <li><a href="#"><i class="fa fa-dollar"></i> CRC</a></li>

                    @if (Session["NombreUsuario"] != null && !string.IsNullOrEmpty(Session["NombreUsuario"].ToString()))
                    {
                        <li class="dropdown">
                            <!-- Mostrar el nombre del usuario autenticado -->
                            <a href="#" id="user-dropdown" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-o"></i> @Session["NombreUsuario"] <b class="caret"></b>
                            </a>
                            <!-- Menú desplegable con opciones -->
                            <ul class="dropdown-menu" aria-labelledby="user-dropdown">
                                <li><a href="@Url.Action(" Perfil", "Usuario" )" class="dropdown-item">Ver perfil</a></li>
                                <li><a href="@Url.Action(" CerrarSesion", "Inicio" )" class="dropdown-item text-danger">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Si no está autenticado, mostrar "Iniciar Sesión" -->
                        <li><a href="@Url.Action(" IniciarSesion", "Inicio" )"><i class="fa fa-user-o"></i> Iniciar Sesión</a></li>
                    }
                </ul>
            </div>
        </div>

        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="@Url.Action(" PantallaPrincipal","Inicio")" class="logo">
                                <img src="~/Estilos/img/logo.jpg" height="125" width="100" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <select class="input-select">
                                    <option value="0">Categorías</option>
                                    <option value="1">Camisas</option>
                                    <option value="1">Gorras</option>
                                </select>
                                <input class="input" placeholder="Busque Aquí">
                                <button class="search-btn">Buscar</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Wishlist -->
                            <div>
                                <a href="#">
                                    <i class="fa fa-heart-o"></i>
                                    <span>Deseados</span>
                                    <div class="qty">2</div>
                                </a>
                            </div>
                            <!-- /Wishlist -->
                            <!-- Cart -->
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Carrito</span>
                                    <div class="qty">4</div>
                                </a>
                                <div class="cart-dropdown">
                                    <div class="cart-list">
                                        <div class="product-widget">
                                            <div class="product-img">
                                                <img src="/img/product01.png" alt="">
                                            </div>
                                            <div class="product-body">
                                                <h3 class="product-name"><a href="#">product name goes here</a></h3>
                                                <h4 class="product-price"><span class="qty">1x</span>$980.00</h4>
                                            </div>
                                            <button class="delete"><i class="fa fa-close"></i></button>
                                        </div>

                                        <div class="product-widget">
                                            <div class="product-img">
                                                <img src="/img/product02.png" alt="">
                                            </div>
                                            <div class="product-body">
                                                <h3 class="product-name"><a href="#">product name goes here</a></h3>
                                                <h4 class="product-price"><span class="qty">3x</span>$980.00</h4>
                                            </div>
                                            <button class="delete"><i class="fa fa-close"></i></button>
                                        </div>
                                    </div>
                                    <div class="cart-summary">
                                        <small>3 Item(s) selected</small>
                                        <h5>SUBTOTAL: $2940.00</h5>
                                    </div>
                                    <div class="cart-btns">
                                        <a href="@Url.Action(" ConsultaCarrito", "Carrito" )">View Cart</a>
                                        <a href="#">Pagar <i class="fa fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- /Cart -->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>

                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>


    <div class="main-container">
        <div class="aside">
            <h3>Filtrar Productos</h3>
            <div id="selected-filters"></div>
            <div class="filters-sidebar">
                <!-- Categorías -->
                <div class="filter-section" data-filter-type="categoria">
                    <div class="filter-title">
                        <h3>Tipo de Ropa</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-category="1">
                                <div class="checkbox"></div>
                                <span>Ropa de niño</span>
                            </li>
                            <li data-category="2">
                                <div class="checkbox"></div>
                                <span>Ropa de niña</span>
                            </li>
                            <li data-category="3">
                                <div class="checkbox"></div>
                                <span>Ropa de hombre</span>
                            </li>
                            <li data-category="4">
                                <div class="checkbox"></div>
                                <span>Ropa de mujer</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Artículos de Oficina -->
                <div class="filter-section" data-filter-type="categoria">
                    <div class="filter-title">
                        <h3>Artículos de Oficina</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-category="6">
                                <div class="checkbox"></div>
                                <span>Tazas</span>
                            </li>
                            <li data-category="8">
                                <div class="checkbox"></div>
                                <span>Mousepads</span>
                            </li>
                            <li data-category="15">
                                <div class="checkbox"></div>
                                <span>Cuadernos personalizados</span>
                            </li>
                            <li data-category="7">
                                <div class="checkbox"></div>
                                <span>Accesorios</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Artículos Decorativos -->
                <div class="filter-section" data-filter-type="categoria">
                    <div class="filter-title">
                        <h3>Artículos Decorativos</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-category="9">
                                <div class="checkbox"></div>
                                <span>Cojines</span>
                            </li>
                            <li data-category="13">
                                <div class="checkbox"></div>
                                <span>Platos decorativos</span>
                            </li>
                            <li data-category="14">
                                <div class="checkbox"></div>
                                <span>Almohadas</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Accesorios Personales -->
                <div class="filter-section" data-filter-type="categoria">
                    <div class="filter-title">
                        <h3>Accesorios Personales</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-category="10">
                                <div class="checkbox"></div>
                                <span>Llaveros</span>
                            </li>
                            <li data-category="11">
                                <div class="checkbox"></div>
                                <span>Botellas térmicas</span>
                            </li>
                            <li data-category="12">
                                <div class="checkbox"></div>
                                <span>Fundas de teléfono</span>
                            </li>
                            <li data-category="5">
                                <div class="checkbox"></div>
                                <span>Gorras</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Precio -->
                <div class="filter-section" data-filter-type="precio">
                    <div class="filter-title">
                        <h3>Rango de Precio</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-price-min="2500" data-price-max="3000">
                                <div class="checkbox"></div>
                                <span>₡2.500 - ₡3.000</span>
                            </li>
                            <li data-price-min="4000" data-price-max="4500">
                                <div class="checkbox"></div>
                                <span>₡4.000 - ₡4.500</span>
                            </li>
                            <li data-price-min="5000">
                                <div class="checkbox"></div>
                                <span>₡5.000 y superior</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Tamaño -->
                <div class="filter-section" data-filter-type="mct">
                    <div class="filter-title">
                        <h3>Tamaño</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li data-size="S">
                                <div class="checkbox"></div>
                                <span>S</span>
                            </li>
                            <li data-size="M">
                                <div class="checkbox"></div>
                                <span>M</span>
                            </li>
                            <li data-size="L">
                                <div class="checkbox"></div>
                                <span>L</span>
                            </li>
                            <li data-size="XL">
                                <div class="checkbox"></div>
                                <span>XL</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Color -->
                <div class="filter-section" data-filter-type="mct">
                    <div class="filter-title">
                        <h3>Color</h3>
                        <span class="filter-toggle-icon">▼</span>
                    </div>
                    <div class="filter-content">
                        <form class="filter-form">
                            <input type="text" id="color" name="color" placeholder="Buscar por color...">
                            <button type="submit">Aplicar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>



    <!-- NEWSLETTER -->
    <div id="newsletter" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="newsletter">
                        <p>Regístrate al <strong>Bolitín</strong></p>
                        <form>
                            <input class="input" type="email" placeholder="Ingrese su correo electrónico">
                            <button class="newsletter-btn"><i class="fa fa-envelope"></i> Suscribirse</button>
                        </form>
                        <ul class="newsletter-follow">
                            <li>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>

    <!-- FOOTER -->
    <footer id="footer">
        <!-- top footer -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Acercas de Nosotros</h3>
                            <p>Somos una Pyme de didicada a la Sublimación</p>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fa fa-phone"></i> +506-8303-9384</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i> joha-Guillen@Hotmail.com</a></li>
                                <li><a href="#"><i class="fa fa-map-marker"></i> Costado norte de la plaza de cipreses de Oreamuno</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Categorías</h3>
                            <ul class="footer-links">
                                <li><a href="#">Descuentos</a></li>
                                <li><a href="#">Caminisas</a></li>
                                <li><a href="#">Tazas</a></li>
                                <li><a href="#">Gorras</a></li>
                                <li><a href="#">Accesorios</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="clearfix visible-xs"></div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Información</h3>
                            <ul class="footer-links">
                                <li><a href="@Url.Action("Nosotros", "Informacion" )">Acerca de nosotros</a></li>
                                <li><a href="@Url.Action("Contactos", "Informacion" )">Contáctanos</a></li>
                                <li><a href="@Url.Action("Blog", "Blog" )">Blogs</a></li>
                                <li><a href="@Url.Action("PoliticaDevolucion", "PoliticaDevolucion" )">Politica de devoluciones</a></li>
                                <li><a href="@Url.Action("AvisoPrivacidad", "AvisoPrivacidad" )">Avisos & Privacidad</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Servicios</h3>
                            <ul class="footer-links">
                                <li><a href="@Url.Action("PantallaPrincipal", "Inicio" )">Mi Cuenta</a></li>
                                <li><a href="@Url.Action("Ayuda", "Ayuda" )">Ayuda</a></li>
                                <li><a href="@Url.Action("PantallaPrincipal", "Inicio" )">Lista de deseos</a></li>
                                <li><a href="@Url.Action("PantallaPrincipal", "Inicio" )">Seguimientos de Envios</a></li>
                                <li><a href="@Url.Action("PreguntasFrecuentes", "PreguntasFrecuentes" )">Preguntas frecuentes</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>


        <!-- /top footer -->
        <!-- bottom footer -->
        <div id="bottom-footer" class="section">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="footer-payments">
                            <li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
                            <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-discover"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-amex"></i></a></li>
                        </ul>
                        <span class="copyright">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> Derechos Reservados<i aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </span>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
    </footer>


    <!-- jQuery Plugins -->
    <script src="~/Estilos/js/jquery.min.js"></script>
    <script src="~/Estilos/js/bootstrap.min.js"></script>
    <script src="~/Estilos/js/slick.min.js"></script>
    <script src="~/Estilos/js/nouislider.min.js"></script>
    <script src="~/Estilos/js/jquery.zoom.min.js"></script>
    <script src="~/Estilos/js/main.js"></script>
    <script src="~/Estilos/js/Filtros.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>