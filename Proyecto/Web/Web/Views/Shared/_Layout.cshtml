                <!-- Accesorios Personales -->
                <div class="filter-section">
                    <h3 class="filter-title">Accesorios Personales</h3>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li><a href="@Url.Action("FiltrarPorCategoria", "Inicio", new { IdCategoria = 10 })">Llaveros</a></li>
                            <li><a href="@Url.Action("FiltrarPorCategoria", "Inicio", new { IdCategoria = 11 })">Botellas térmicas</a></li>
                            <li><a href="@Url.Action("FiltrarPorCategoria", "Inicio", new { IdCategoria = 12 })">Fundas de teléfono</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Precio -->
                <div class="filter-section">
                    <h3 class="filter-title">Rango de Precio</h3>
                    <div class="filter-content">
                        <ul class="filter-list">
                            <li class="price-range">
                                <a href="@Url.Action("FiltrarPorPrecio", "Inicio", new { PrecioMinimo = 2500, PrecioMaximo = 3000 })">
                                    ₡2.500 - ₡3.000
                                </a>
                            </li>
                            <li class="price-range">
                                <a href="@Url.Action("PantallaPrincipal", "Inicio", new { PrecioMinimo = 4000, PrecioMaximo = 4500 })">
                                    ₡4.000 - ₡4.500
                                </a>
                            </li>
                            <li class="price-range">
                                <a href="@Url.Action("PantallaPrincipal", "Inicio", new { PrecioMinimo = 5000, PrecioMaximo = (decimal?)null })">
                                    ₡5.000 y superior
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Color -->
                <div class="filter-section">
                    <h3 class="filter-title">Color</h3>
                    <div class="filter-content">
                        <form class="filter-form" method="get" action="@Url.Action("PantallaPrincipal", "Inicio")">
                            <input type="text" id="Color" name="Color" placeholder="Buscar por color..." />
                            <button type="submit">Aplicar</button>
                        </form>
                    </div>
                </div>

                <!-- Tamaño -->
                <div class="filter-section">
                    <h3 class="filter-title">Tamaño</h3>
                    <div class="filter-content">
                        <form class="filter-form" method="get" action="@Url.Action("PantallaPrincipal", "Inicio")">
                            <input type="text" id="Tamanio" name="Tamanio" placeholder="Buscar por tamaño..." />
                            <button type="submit">Aplicar</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
