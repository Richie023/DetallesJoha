@model List<Web.Entidades.BlogArticulo>

@{
    ViewBag.Title = "Gestión del Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center">@ViewBag.Title</h1>

    <div class="text-right mb-3">
        <a href="@Url.Action("Insertar", "Blog")" class="btn btn-success">Agregar Nuevo Artículo</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Categoría</th>
                    <th>Título</th>
                    <th>Resumen</th>
                    <th>Fecha de Publicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var articulo in Model)
                {
                    <tr>
                        <td>@articulo.Categoria</td>
                        <td>@articulo.Titulo</td>
                        <td>@articulo.Resumen</td>
                        <td>@articulo.FechaPublicacion.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="@Url.Action("Editar", "Blog", new { id = articulo.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Eliminar", "Blog", new { id = articulo.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de eliminar este artículo?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning text-center">No se encontraron artículos en el blog.</p>
    }
</div>
